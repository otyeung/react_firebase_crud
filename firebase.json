{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/api",
        "function": "api"
      },
      {
        "source": "/admin",
        "function": "api"
      },
      {
        "source": "/contacts",
        "function": "api"
      }      
    ]
  }
}
